{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es5",
      "ES6"
    ], 
    "module": "commonjs", 
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
